
{{> header }}

<h1>Entrada a Gestión de Días Libres</h1>

{{> show_flash_messages }}

<form class="form-horizontal" action="/login" method="post">

  <div class="row">&nbsp;</div>

  <div class="form-group">
    <label for="email_inp" class="col-md-2 control-label col-md-offset-2">Usuario:</label>
    <div class="col-md-5">
      <input class="form-control" id="email_inp" type="text" name="username">
    </div>
  </div>

  <div class="form-group">
    <label for="pass_inp" class="col-md-2 control-label col-md-offset-2">Contraseña</label>
    <div class="col-md-5">
      <input class="form-control" id="pass_inp" type="password" name="password">
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-1">
      <button type="submit" class="btn btn-success" id="submit_login">Entrar</button>
    </div>
    <div class="col-md-4">
      <p class="pull-left"><a href="https://passldap.silex.metromadrid.net/passwords/?action=sendtoken">¿Olvidó su contraseña?</a></p>
    </div>
  </div>

</form>

<div class="row">&nbsp;</div>


{{> footer }}
